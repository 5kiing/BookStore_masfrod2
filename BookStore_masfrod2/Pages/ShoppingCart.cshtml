@page
@model BookStore_masfrod2.Pages.ShoppingCartModel
@{
}

<h2>Your Shopping Cart</h2>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Book</th>
            <th>Quantity</th>
            <th>Price</th>
            <th>Subtotal</th>
        </tr>
    </thead>
    @*create shopping art view and show the book selected with the price*@
    <tbody>
        @foreach (var i in Model.cart.Items)
        {
            <tr>

                <td>@i.Book.Title</td>
                <td>@i.Quantity</td>
                <td>@i.Price</td>
                <td>@i.Quantity * @i.Book.Price</td>

                <td class="text-center">
                    <form asp-page-handler="Remove" method="post">
                        <input type="hidden" name="BookId"
                                                              value="@i.Book.BookId" />
                        <input type="hidden" name="returnUrl"
                                                              value="@Model.ReturnUrl" />
                        <button type="submit" class="btn btn-sm btn-danger">
                            Remove
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>

    <tfoot>
        <tr>
            <td colspan="3">Total:</td>
            <td>@Model.cart.CalculateTotal().ToString("c")</td>

        </tr>
    </tfoot>

</table>

<div>
    <a class="btn btn-primary" href="@Model.ReturnUrl">Continue Shopping</a>
    <a class="btn btn-primary" asp-action="Checkout" asp-controller="Purchase">Checkout</a>

</div>